<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="de.defaultconstructor.mytimestamp.app.android.components"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/editTextProjektdatenName"
            style="?android:editTextPreferenceStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Projektname"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="8dp"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/editTextProjektdatenNummer"
            style="?android:editTextPreferenceStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Projektnummer"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="8dp"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/editTextProjektdatenBeschreibung"
            style="?android:editTextPreferenceStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Beschreibung"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="8dp"/>
    </android.support.design.widget.TextInputLayout>
    <de.defaultconstructor.mytimestamp.app.android.components.DateTimeEditText
        android:id="@+id/editTextProjektdatenBeginn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        custom:date_hint="Projektbeginn"
        custom:time_hint="Uhrzeit"
        custom:type="date-time"/>
    <de.defaultconstructor.mytimestamp.app.android.components.DateTimeEditText
        android:id="@+id/editTextProjektdatenEnde"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        custom:date_hint="Projektende"
        custom:time_hint="Uhrzeit"
        custom:type="date-time"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">
        <Button
            android:id="@+id/buttonSubmitProjektdaten"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Speichern"/>
    </LinearLayout>
</LinearLayout>